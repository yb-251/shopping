<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_15">

    <ImageView
        android:id="@+id/good_detail_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120" />

    <TextView
        android:id="@+id/good_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/good_detail_img"
        android:text="价格：￥599"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/good_detail_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_detail_price"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/good_detail_img"
        android:text="已选择： 请选择城规数量"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/good_detail_cancel"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:background="@mipmap/cancel" />

    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_detail_img"
        android:layout_marginTop="@dimen/dp_10"
        android:text="数量"
        android:textColor="@color/textColorBlack" />

    <LinearLayout
        android:background="@drawable/shape_seach"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_num"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="-"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_less"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="1"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_pius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_number"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="+"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/dp_16" />

    </LinearLayout>

</RelativeLayout>