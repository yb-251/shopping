<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/good_detail_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"/>
    <TextView
        android:id="@+id/good_detail_price"
        android:text="价格：￥599"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/textColorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/good_detail_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/good_detail_specification"
        android:text="已选择： 请选择城规数量"
        android:layout_below="@id/good_detail_price"
        android:textStyle="bold"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/good_detail_img"/>
    <ImageView
        android:id="@+id/good_detail_cancel"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/back"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:textColor="@color/textColorBlack"
        android:layout_below="@id/good_detail_img"
        android:layout_marginTop="@dimen/dp_10"/>
    <com.umeng.soexample.widget.NumberSelect
        android:id="@+id/num_change_good"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_below="@id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>